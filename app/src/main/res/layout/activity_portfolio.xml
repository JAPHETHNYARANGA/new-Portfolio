<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/Navbar"
        >
        <TextView
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginStart="20sp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Portfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/PortfolioTitle"
        android:layout_width="match_parent"
        android:layout_below="@+id/Navbar"
        android:layout_height="wrap_content"
        android:text="Portfolio"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#008000"/>

    <TextView
        android:id="@+id/Showcase"
        android:layout_width="match_parent"
        android:layout_below="@+id/PortfolioTitle"
        android:layout_height="wrap_content"
        android:text="The following are my showcase projects"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PortfolioButtons"
        android:layout_below="@+id/Showcase"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design"
            android:textSize="10sp"
            android:layout_margin="10sp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Websites"
            android:textSize="10sp"
            android:layout_margin="10sp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Apps"
            android:textSize="7sp"
            android:layout_margin="10sp"
            android:layout_weight="1"/>


    </LinearLayout>

</RelativeLayout>