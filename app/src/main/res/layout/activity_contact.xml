<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/Navbar"
        >
        <TextView
            android:id="@+id/Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginStart="20sp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Portfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portfolio"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/PortfolioTitle"
        android:layout_width="match_parent"
        android:layout_below="@+id/Navbar"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#008000"/>

    <TextView
        android:id="@+id/Showcase"
        android:layout_width="match_parent"
        android:layout_below="@+id/PortfolioTitle"
        android:layout_height="wrap_content"
        android:text="How you Can Contact Me"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFF"/>
    <RelativeLayout
        android:id="@+id/ContactDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Showcase">

        <ImageView
            android:layout_marginTop="20dp"

            android:id="@+id/Mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail_foreground"/>
        <TextView
            android:id="@+id/eMail"
            android:layout_toRightOf="@id/Mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="60dp"
            android:text="nyaranga4@gmail.com"/>

        <ImageView
            android:layout_below="@+id/Mail"
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_foreground"/>
        <TextView
            android:id="@+id/PhoneNo"
            android:layout_toRightOf="@id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginTop="160dp"
            android:text="+254729736134"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/Connect"
        android:layout_below="@+id/ContactDetails"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Connect With Me"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#fff" />


    <LinearLayout
        android:id="@+id/Socials"
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/Linkdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_foreground"
            android:layout_margin="10sp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/Twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_foreground"
            android:layout_margin="10sp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/Github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_foreground"
            android:layout_margin="10sp"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>